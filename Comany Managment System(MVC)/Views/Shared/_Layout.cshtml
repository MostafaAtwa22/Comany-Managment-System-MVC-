<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Comapny - @ViewData["Title"]</title>
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- Favicons -->
    <link href="assets/img/DEPI.jpeg" rel="icon">
    <link href="assets/img/DEPI.jpeg" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    
    <!-- Vendor CSS Files -->
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">

    <link href="assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <!-- Main CSS File -->
    <link href="assets/css/main.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .main {
            flex: 1;
        }   

        .footer {
            margin-top: auto;
        }
    </style>
</head>


<body class="index-page">

    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

            <a asp-action="Index" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <img src="assets/img/DEPI.jpeg" alt="">
                <h1 class="sitename">Company System</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    @if (User?.Identity?.IsAuthenticated == true)
                    {       
                        if (User.IsInRole(RoleConsts.Admin))
                        {                            
                            <li><a asp-controller="Departments" asp-action="Index">Departments</a></li>
                            <li><a asp-controller="Employees" asp-action="Index">Employees</a></li>
                            <li><a asp-controller="Employees" asp-action="GetManagers">Managers</a></li>
                            <li><a asp-controller="Projects" asp-action="Index">Projects</a></li>
                            <li><a asp-controller="Dependents" asp-action="Index">Dependents</a></li>
                        }
                        else if (User.IsInRole(RoleConsts.Employee))
                        {
                            <li><a asp-controller="Projects" asp-action="Index">Project</a></li>
                        }
                        else if (User.IsInRole(RoleConsts.Manager))
                        {
                            <li><a asp-controller="Employees" asp-action="GetEmployeesUnderManager" asp-route-id="@User.FindFirst("EmployeeId")?.Value">Employees</a></li>
                            <li><a asp-controller="Projects" asp-action="Index">Projects</a></li>
                        }
                        <li class="nav-link d-flex align-items-center signout-link">
                            <a asp-controller="Employees" asp-action="Details" asp-route-id="@User.FindFirst("EmployeeId")?.Value"
                                class="ms-1 text-white text-decoration-none hover-link">
                                Welcome, @User.Identity.Name
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Logout" class="nav-link d-flex align-items-center signout-link">
                                <i class="bi bi-door-open me-2"></i> Sign Out
                            </a>
                        </li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Login">Sign In</a></li>
                        <li><a asp-controller="Account" asp-action="Register">Sign Up</a></li>
                    }
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

        </div>
    </header>

    <main class="main">

        <!-- Hero Section -->
        <section id="hero" class="hero section dark-background">

            <div id="hero-carousel" data-bs-interval="5000" class="container carousel carousel-fade" data-bs-ride="carousel">

                <!-- Slide 1 -->
                <div class="carousel-item active">
                    <div class="carousel-container">
                        <h2 class="animate__animated animate__fadeInDown">Welcome to <span>Company System</span></h2>
                        <p class="animate__animated animate__fadeInUp">
                            Clean Architecture promotes a clear separation of concerns, ensuring maintainability and scalability. It organizes code into layers, keeping business logic independent of frameworks and external dependencies. Similarly, Union in C# provides an efficient way to store different data types in the same memory location, optimizing performance. Both concepts emphasize structure and efficiency in software design.
                        </p>

                        <a href="#about" class="btn-get-started animate__animated animate__fadeInUp scrollto">Read More</a>
                    </div>
                </div>

                <!-- Slide 2 -->
                <div class="carousel-item">
                    <div class="carousel-container">
                        <h2 class="animate__animated animate__fadeInDown">Modern Software Architecture</h2>
                        <p class="animate__animated animate__fadeInUp">
                            In software development, we utilize <strong>AutoMapper</strong> to streamline object-to-object mapping, reducing manual code. The <strong>Repository Design Pattern</strong> abstracts data access, enhancing maintainability. By adhering to <strong>SOLID principles</strong>, we ensure a scalable and flexible system architecture. Additionally, <strong>Dependency Injection (DI)</strong> promotes loose coupling, making the application more testable and easier to manage.
                        </p>

                        <a href="#about" class="btn-get-started animate__animated animate__fadeInUp scrollto">Read More</a>
                    </div>
                </div>

                <!-- Slide 3 -->
                <div class="carousel-item">
                    <div class="carousel-container">
                        <h2 class="animate__animated animate__fadeInDown">Exploring the .NET Ecosystem</h2>
                        <p class="animate__animated animate__fadeInUp">
                            The <strong>.NET ecosystem</strong> offers a powerful framework for building modern applications. With <strong>.NET Core</strong> and <strong>.NET Framework</strong>, developers can create cross-platform and enterprise-grade solutions. Essential tools like <strong>Visual Studio</strong> and <strong>Visual Studio Code</strong> enhance development efficiency. Additionally, languages such as <strong>C#</strong>, <strong>F#</strong>, and <strong>VB.NET</strong> provide flexibility in building web, desktop, and cloud applications. Combined with tools like <strong>Entity Framework</strong> for ORM and <strong>ASP.NET Core</strong> for web development, .NET continues to be a robust and scalable choice for developers.
                        </p>

                      <a href="#about" class="btn-get-started animate__animated animate__fadeInUp scrollto">Read More</a>
                    </div>
                </div>

                <a class="carousel-control-prev" href="#hero-carousel" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
                </a>

                <a class="carousel-control-next" href="#hero-carousel" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
                </a>

            </div>

            <svg class="hero-waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 24 150 28 " preserveAspectRatio="none">
                <defs>
                    <path id="wave-path" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"></path>
                </defs>
                <g class="wave1">
                    <use xlink:href="#wave-path" x="50" y="3"></use>
                </g>
                <g class="wave2">
                    <use xlink:href="#wave-path" x="50" y="0"></use>
                </g>
                <g class="wave3">
                    <use xlink:href="#wave-path" x="50" y="9"></use>
                </g>
            </svg>

        </section><!-- /Hero Section -->
        <!-- About Section -->
        <section id="about" class="about section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>About</h2>
                <p>About the Project</p>
            </div><!-- End Section Title -->

            <div class="container">
                <div class="row gy-4">
                    <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
                        <p>
                            This project is built using <strong>.NET Core</strong> for backend development, following best practices like
                            <strong>Clean Architecture</strong> and the <strong>Repository Design Pattern</strong>.
                            It ensures maintainability, scalability, and testability.
                        </p>
                        <ul>
                            <li><i class="bi bi-check2-circle"></i> <span>Utilizes <strong>AutoMapper</strong> for efficient object mapping.</span></li>
                            <li><i class="bi bi-check2-circle"></i> <span>Follows <strong>SOLID principles</strong> for better code structure.</span></li>
                            <li><i class="bi bi-check2-circle"></i> <span>Implements <strong>Dependency Injection (DI)</strong> for loose coupling.</span></li>
                        </ul>
                    </div>

                    <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                        <p>
                            The frontend is developed using <strong>Bootstrap</strong> for responsive design and
                            <strong>Animate.css</strong> for smooth animations. Data persistence is managed using <strong>Entity Framework Core</strong>,
                            ensuring efficient database interactions.
                        </p>
                        <a href="#" class="read-more"><span>Read More</span><i class="bi bi-arrow-right"></i></a>
                    </div>
                </div>
            </div>


        </section><!-- /About Section -->
        <!-- Team Section -->
        <section id="team" class="team section">
            @RenderBody()
            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Team</h2>
                <p>Our Hardworking Team</p>
            </div><!-- End Section Title -->

            <div class="container">
                <div class="row gy-2 justify-content-center align-items-center column-gap-5">
                    <!-- Added 'justify-content-center' -->
                    <div class="col-lg-3 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                        <div class="team-member">
                            <div class="member-img">
                                <img src="assets/img/team/Atwa.png" class="img-fluid" alt="" style="width:500px;height:300px;">
                                <div class="social">
                                    <a href="https://github.com/MostafaAtwa22"><i class="bi bi-github"></i></a>
                                    <a href="https://www.facebook.com/mostafaatwa22"><i class="bi bi-facebook"></i></a>
                                    <a href=""><i class="bi bi-whatsapp"></i></a>
                                    <a href="https://www.linkedin.com/in/mostafa-atwa-807813250/"><i class="bi bi-linkedin"></i></a>
                                </div>
                            </div>
                            <div class="member-info">
                                <h4>Mostafa Atwa</h4>
                                <span>Back-end developer</span>
                            </div>
                        </div>
                    </div><!-- End Team Member -->

                    <div class="col-lg-3 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                        <div class="team-member">
                            <div class="member-img">
                                <img src="assets/img/team/Yasser.jpeg" class="img-fluid" alt="" style="width:500px;height:300px;">
                                <div class="social">
                                    <a href="https://github.com/mostafa279"><i class="bi bi-github"></i></a>
                                    <a href=""><i class="bi bi-facebook"></i></a>
                                    <a href=""><i class="bi bi-whatsapp"></i></a>
                                    <a href="https://www.linkedin.com/in/mostafa-yasser-5802a2243/"><i class="bi bi-linkedin"></i></a>
                                </div>
                            </div>
                            <div class="member-info">
                                <h4>Mostafa Yasser</h4>
                                <span>Back-end developer</span>
                            </div>
                        </div>
                    </div><!-- End Team Member -->
                </div>
            </div>
        </section><!-- /Team Section -->

    </main>

    <footer id="footer" class="footer dark-background">
        <div class="container">
            <h3 class="sitename">Selecao</h3>
            <p>Company Management System</p>
            <div class="social-links d-flex justify-content-center">
                <a href=""><i class="bi bi-twitter-x"></i></a>
                <a href=""><i class="bi bi-facebook"></i></a>
                <a href=""><i class="bi bi-instagram"></i></a>
                <a href=""><i class="bi bi-skype"></i></a>
