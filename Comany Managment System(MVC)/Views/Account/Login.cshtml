@model LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "_Login";
}

<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Sign in</h3>

                        <form asp-action="Login">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <!-- Email input -->
                            <div data-mdb-input-init class="form-outline mb-4">
                                <label class="form-label" asp-for="EmailOrUserName" style="text-align: left; width: 100%;">Email Or UserName</label>
                                <input asp-for="EmailOrUserName" class="form-control form-control-lg" placeholder="Email Or UserName" />
                                <span asp-validation-for="EmailOrUserName" class="text-danger" style="display: block; text-align: left;"></span>
                            </div>

                            <!-- Password input -->
                            <div data-mdb-input-init class="form-outline mb-4">
                                <label class="form-label" asp-for="Password" style="text-align: left; width: 100%;">Password</label>
                                <input asp-for="Password" class="form-control form-control-lg" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger" style="display: block; text-align: left;"></span>
                            </div>

                            <!-- Remember me checkbox -->
                            <div class="form-check d-flex justify-content-start mb-4">
                                <input class="form-check-input" asp-for="RememberMe" />
                                <label class="form-check-label" asp-for="RememberMe"> Remember me </label>
                            </div>

                            <!-- Login button -->
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                        </form>

                        <hr class="my-4">

                        <!-- Social login buttons -->
                        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;"
                                type="submit">
                            <i class="bi-google"></i> Sign in with Google
                        </button>
                        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;"
                                type="submit">
                            <i class="bi-facebook"></i> Sign in with Facebook
                        </button>

                        <!-- Forget Password Link -->
                        <div class="mt-4">
                            <p>
                                <a asp-action="ForgetPassword" class="text-primary" style="font-size: 1.1rem;text-decoration: none;">
                                    <i class="bi-lock"></i> Forgot your password?
                                </a>
                            </p>
                        </div>

                        <div class="mt-4">
                            <p>
                                <i class="bi-door-open"></i> Don't have an email?
                                <a asp-action="Register" class="text-bg-info" style="font-size: 1.1rem;text-decoration: none;">
                                    Register
                                </a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
