@model LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "_Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="container">
        <div class="row justify-content-center align-items-stretch">
            <div class="col-md-5">
                <div class="card shadow-sm p-4 h-100">
                    <h3 class="text-primary mb-4">Sign In with Company Account</h3>
                    <form asp-action="Login">
                        <!-- Email input -->
                        <div class="form-group mb-3">
                            <label asp-for="EmailOrUserName" class="form-label">Email</label>
                            <input asp-for="EmailOrUserName" class="form-control" placeholder="Email" />
                            <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Remember me and Forgot Password -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="RememberMe" />
                                <label class="form-check-label" asp-for="RememberMe"> Remember Me </label>
                            </div>
                            <a asp-action="ForgetPassword" class="text-primary">Forgot Password?</a>
                        </div>

                        <!-- Login button -->
                        <button type="submit" class="btn btn-warning btn-block mb-3">Sign In</button>
                        <div class="text-center">
                            <p>Don't have an account? <a asp-action="Register" class="text-primary">Create One</a></p>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-5 d-flex justify-content-center align-items-stretch">
                <img src="~/assets/img/DEPI.jpeg" class="img-fluid h-100 rounded-end" alt="Welcome Image" style="margin: 0; padding: 0; margin-left:-62px;">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        body {
            background-color: #333;
        }

        .card {
            border-radius: 1rem 0 0 1rem;
        }

        .btn-warning {
            background-color: #ff6600;
            border-color: #ff6600;
            color: #fff;
        }

        .text-primary {
            color: #1a1a1a;
        }

        .form-check-label {
            margin-left: 0.5rem;
        }

        img {
            max-width: 100%;
            height: 100%;
            object-fit: cover;
            margin-left: 0;
            padding: 0;
        }

        .rounded-end {
            border-top-right-radius: 1rem;
            border-bottom-right-radius: 1rem;
        }
    </style>
}