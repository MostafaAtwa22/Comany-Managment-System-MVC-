@model ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Login";
}
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="container">
        <div class="row justify-content-center align-items-stretch">
            <div class="col-md-5">
                <div class="card shadow-sm p-4 h-100">
                    <h3 class="text-primary mb-4">Change your password</h3>
                    <form asp-action="ResetPassword">

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" asp-for="Password" style="text-align: left; width: 100%;">New Password</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter new password" />
                            <span asp-validation-for="Password" class="text-danger" style="display: block; text-align: left;"></span>
                        </div>

                        <!-- Confirm Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" asp-for="ConfirmPassword" style="text-align: left; width: 100%;">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirm your new password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger" style="display: block; text-align: left;"></span>
                        </div>

                        <!-- Reset button -->
                        <button class="btn btn-warning btn-lg btn-block mb-3" type="submit">Reset Password</button>
                    </form>
                </div>
            </div>
            <div class="col-md-5 d-flex justify-content-center align-items-stretch">
                <img src="~/assets/img/DEPI.jpeg" class="img-fluid h-100 rounded-end" alt="Reset Image" style="margin: 0; padding: 0; margin-left:-62px;">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        body {
            background-color: #333;
        }

        .card {
            border-radius: 1rem 0 0 1rem;
        }

        .btn-warning {
            background-color: #ff6600;
            border-color: #ff6600;
            color: #fff;
        }

        .text-primary {
            color: #1a1a1a;
        }

        .form-check-label {
            margin-left: 0.5rem;
        }

        img {
            max-width: 100%;
            height: 100%;
            object-fit: cover;
            margin-left: 0;
            padding: 0;
        }

        .rounded-end {
            border-top-right-radius: 1rem;
            border-bottom-right-radius: 1rem;
        }
    </style>
}