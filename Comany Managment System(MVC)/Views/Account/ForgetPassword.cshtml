@model ForgetPasswordVM

@{
    ViewData["Title"] = "Forget Password";
    Layout = "_Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <!-- Changed to match Login background color -->
    <div class="container">
        <div class="row justify-content-center align-items-stretch">
            <div class="col-md-5">
                <div class="card shadow-sm p-4" style="border-radius: 1rem;">
                    <h3 class="text-primary mb-4">Reset Your Password</h3>

                    <form asp-action="SendEmail">
                        <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" asp-for="Email" style="text-align: left;">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger" style="display: block; text-align: left;"></span>
                        </div>

                        <!-- Submit button -->
                        <button class="btn btn-warning btn-lg btn-block mb-3" type="submit">Send Reset Link</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        body {
            background-color: #404356 !important /* Consistent background color */
        }

        .card {
            border-radius: 1rem; /* Consistent border radius */
        }

        .text-primary {
            color: #1a1a1a; /* Primary text color */
        }

        .btn-warning {
            background-color: #ff6600; /* Button color */
            border-color: #ff6600;
            color: #fff;
        }

        img {
            max-width: 100%;
            height: 100%;
            object-fit: cover;
            margin-left: 0;
            padding: 0;
        }

        .rounded-end {
            border-top-right-radius: 1rem;
            border-bottom-right-radius: 1rem;
        }
    </style>
}
