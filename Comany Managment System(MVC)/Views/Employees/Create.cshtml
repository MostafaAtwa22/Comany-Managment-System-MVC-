@model CreateEmployeeVM

@{
    ViewData["Title"] = "ADD Employee";
    Layout = "~/Views/Shared/_DataLayout.cshtml";
}

<div class="text-center mb-4 mt-4">
    <h5 class="text-primary">
        <i class="bi bi-plus-circle-dotted"></i>
        Add a New Employee
    </h5>
</div>

<form asp-action="Create" enctype="multipart/form-data" class="p-4 shadow-sm bg-white rounded">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control border border-secondary" asp-for="Name" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="form-label mt-3"></label>
                <input class="form-control border border-secondary" asp-for="Salary" placeholder="Salary" value="" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="form-label mt-3"></label>
                <input class="form-control border border-secondary" asp-for="Age" placeholder="Age" value="" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="form-label mt-3"></label>
                <input type="text" class="form-control border border-secondary" asp-for="Address" placeholder="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label mt-3"></label>
                <input type="email" class="form-control border border-secondary" asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle" class="form-label mt-3"></label>
                <input type="text" class="form-control border border-secondary" asp-for="JobTitle" placeholder="Job Title" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="form-label mt-4"></label>
                <select class="form-select" asp-for="Gender" asp-items="Model.GenderSelectList">
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="form-label mt-2"></label>
                <select class="form-select border border-secondary" asp-for="DepartmentId" asp-items="Model.Departments">
                    <option value="">Select a Department</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedProjects" class="form-label mt-2"></label>
                <select id="projectSelect" class="form-select select2-multiple border border-secondary"
                        asp-for="SelectedProjects" multiple="multiple">
                </select>
                <span asp-validation-for="SelectedProjects" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-4 w-50"><i class="bi bi-save"></i>  Save</button>
        </div>
        <div class="col-md-6 d-flex flex-column align-items-center pt-4 overflow-hidden">
            <div class="image-preview-container" style="width: 400px; height: 400px; border: 1px solid #ccc; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                <img class="cover-preview d-none" alt="Image" style="width: 100%; height: 100%; object-fit: cover;" /> 
            </div>
            <div class="form-group mt-3">
                <label asp-for="Image" class="form-label mt-2"></label>
                <input type="file" class="form-control border border-secondary" asp-for="Image"
                       data-rule-extension="@FileSettings.AllowedExtensions.Replace(".", string.Empty)"
                       data-msg-extension="Not allowed extension"
                       data-rule-filesize="@FileSettings.MaxFileSizeInBytes"
                       data-msg-filesize="Maximum allowed size is @FileSettings.MaxFileSizeInMB MB" />
                <small class="form-text text-muted">Only @FileSettings.AllowedExtensions files are allowed with a max size of @(FileSettings.MaxFileSizeInMB) MB.</small>
                <span asp-validation-for="Image" class="text-danger d-block"></span>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/employee-form.js" asp-append-version="true"></script>
    <script src="~/js/filesize-validator.js" asp-append-version="true"></script>
    <script src="~/lib/select2/js/select2.min.js"></script> 
    <script src="~/js/multi-selected-projects-create.js"></script>
}