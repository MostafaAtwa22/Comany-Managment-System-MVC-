@model CreateDepartmentVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DataLayout.cshtml";
}

<div class="container mt-5">
    <h5 class="text-center mb-4">
        <i class="bi bi-plus-circle-dotted"></i>
        Add a New Department
    </h5>

    <form asp-action="Create" enctype="multipart/form-data">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-group mb-4">
                    <label asp-for="Name" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter Department Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Location" class="form-label"></label>
                    <input class="form-control" asp-for="Location" placeholder="Enter Location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ManagerId" class="form-label"></label>
                    <select class="form-select" asp-for="ManagerId" asp-items="Model.ManagersSelectList">
                        <option value="">Select A Manager</option>
                    </select>
                    <span asp-validation-for="ManagerId" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter Department Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg" style="width: 30%; margin-bottom: 20px;">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
