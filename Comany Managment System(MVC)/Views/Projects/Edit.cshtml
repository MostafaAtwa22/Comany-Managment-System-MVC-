@model EditProjectVM

@{
    ViewData["Title"] = "Edit Project";
    Layout = "~/Views/Shared/_DataLayout.cshtml";
}


<div class="container mt-5">
    <h5 class="text-center mb-4">
        <i class="bi bi-pencil-square"></i>
        Edit Project
    </h5>

    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-group mb-4">
                    <label asp-for="Name" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Location" class="form-label"></label>
                    <input class="form-control" asp-for="Location" placeholder="Location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Budget" class="form-label"></label>
                    <input class="form-control" asp-for="Budget" placeholder="Budget" />
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Departments" class="form-label"></label>
                    <select class="form-select" asp-for="DepartmentId" asp-items="Model.Departments">
                        <option value="">Select a department</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg" style="width: 30%; margin-bottom: 20px;">
                        <i class="bi bi-pen"></i> Edit
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}